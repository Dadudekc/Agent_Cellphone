{
  "prd_id": "PRD-005",
  "project_name": "dreamos-kb-portal",
  "title": "Knowledge Base & Training Docs Portal",
  "objective": "Develop a static site generator + CMS where agents and humans can read, edit, and version training docs, coding standards, and runbooks",
  "background": "Onboarding and continuous learning require a centralized, versioned repository of best practices",
  "priority": "medium",
  "complexity": "low",
  "estimated_duration": "4 weeks",
  "team_size": 2,
  
  "key_features": [
    {
      "name": "Markdown Documentation",
      "description": "Docs in Markdown in Git repo",
      "priority": "critical"
    },
    {
      "name": "Static Site Generation",
      "description": "Static site via Hugo or Docusaurus",
      "priority": "critical"
    },
    {
      "name": "Edit Workflow",
      "description": "Inline \"Suggest Edit\" → GitHub pull request",
      "priority": "high"
    },
    {
      "name": "Search Functionality",
      "description": "Search powered by Algolia or Lunr.js",
      "priority": "high"
    },
    {
      "name": "Access Control",
      "description": "Role-based access control for human editors",
      "priority": "medium"
    }
  ],
  
  "deliverables": [
    "Site generator config + theme",
    "CMS integration (Netlify CMS or similar)",
    "Authentication via GitHub SSO",
    "\"Edit on GitHub\" links on every page"
  ],
  
  "success_metrics": [
    {
      "metric": "documentation_coverage",
      "target": "Docs coverage ≥90% of core modules",
      "measurement": "percentage"
    },
    {
      "metric": "pr_turnaround",
      "target": "PR turnaround time <24 h",
      "measurement": "hours"
    },
    {
      "metric": "search_relevancy",
      "target": "Search relevancy ≥80% click-through",
      "measurement": "percentage"
    },
    {
      "metric": "active_contributors",
      "target": "Contributors ≥5 active editors",
      "measurement": "count"
    }
  ],
  
  "technical_requirements": {
    "site_generator": {
      "engine": "Hugo or Docusaurus",
      "theme": "Custom Dream.OS theme",
      "output": "Static HTML/CSS/JS"
    },
    "content_management": {
      "cms": "Netlify CMS or Forestry",
      "storage": "Git repository",
      "workflow": "GitHub pull request based"
    },
    "search": {
      "engine": "Algolia or Lunr.js",
      "indexing": "Automatic on build",
      "features": [
        "Full-text search",
        "Fuzzy matching",
        "Search suggestions"
      ]
    },
    "authentication": {
      "provider": "GitHub OAuth",
      "roles": [
        "viewer",
        "editor",
        "admin"
      ]
    }
  },
  
