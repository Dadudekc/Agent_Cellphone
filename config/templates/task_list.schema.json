{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskList",
  "type": "object",
  "properties": {
    "repo": { "type": "string" },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "state": { "type": "string", "enum": ["new", "queued", "assigned", "executing", "blocked", "done"] },
          "acceptance_criteria": { "type": ["string", "array"] },
          "evidence": { "type": ["string", "array"] },
          "labels": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["task_id", "title", "state"]
      }
    }
  },
  "required": ["repo", "tasks"]
}


